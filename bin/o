#!/usr/bin/env python

import os
import subprocess
import sys

# whitespace sanitizer
def s(filename):
    if ' ' in filename or '\n' in filename or '\t' in filename:
        if '"' in filename:
            return ("'%s'" % filename)
        else:
            return '"%s"' % filename
    else:
        return filename

OS = 'Molla'

linux = {
        'pdf' : 'evince',
        'web' : 'chromium-browser',
        'path': 'nautilus',
        'tex' : 'atom',
    }

mac = {
        'pdf' : '/Applications/Preview.app/Contents/MacOS/Preview',
        'web' : '/Applications/Google Chrome.app/Contents/MacOS/Google Chrome',
        'path' : '/System/Library/CoreServices/Finder.app/Contents/MacOS/Finder',
    }

commands = {
        'Linux' : linux,
        'OSX'   : mac,
    }

def run_command_with(cmd, arg):
    full_cmd = ("%s %s" % (s(cmd), s(arg)))
    print('Running: "%s"' % full_cmd)
    os.system(full_cmd)

def run_command_without(cmd, arg):

    full_cmd = ("%s %s" % (s(cmd), s(arg)))
    print('Running: "%s"' % full_cmd)
    os.system("nohup %s 2>&1 >/dev/null &" % full_cmd)
    quit()

def open_vmware(filename):
    if filename == 'vmware':
        run_command_without('sudo', 'vmware')
    return

def open_pdf(filename):
    eligible = False
    images = ['png', 'jpg', 'jpeg', 'gif', 'tiff', 'pdf', 'bmp']

    for image in images:
        if filename.endswith(image):
            eligible = True
            break

    if not eligible:
        return

    cmd = commands[OS]['pdf']
    run_command_without(cmd, filename)

def open_tex(filename):
    eligible = False
    exts = ['txt', 'tex', 'bib']

    for ext in exts:
        if filename.endswith(ext):
            eligible = True
            break

    if not eligible:
        return

    cmd = commands[OS]['tex']
    run_command_without(cmd, filename)

def open_path(filename):
    cmd = commands[OS]['path']
    run_command_without(cmd, filename)


def open_web(filename):
    eligible = False
    webs = ['http:', 'https:', 'ftp:']

    for web in webs:
        if filename.startswith(web):
            eligible = True
            break

    if not eligible:
        return

    cmd = commands[OS]['web']
    run_command_without(cmd, filename)


def check_os():
    global OS
    uname = subprocess.check_output("uname -a", shell=True)
    if 'Linux' in uname:
        OS = 'Linux'
    elif 'Darwin' in uname:
        OS = 'OSX'


def main():
    check_os()
    if(len(sys.argv) != 2):
        open_path('.')
    arg = sys.argv[1]

    open_vmware(arg)
    open_pdf(arg)
    open_tex(arg)
    open_web(arg)
    open_path(arg)

if __name__ == '__main__':
    main()
