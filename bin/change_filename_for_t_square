#!/usr/bin/env ruby

def usage
  puts "#{__FILE__} [directory]"
end


if ARGV.length != 1
  usage
  exit
end

target_dir = ARGV[0]

Dir.open(target_dir).each do |x|
  if x == '.' || x == '..' || x == '.DS_Store'
    next
  end
  xx = x.gsub('+',' ')
  File.rename(target_dir + '/' + x, target_dir + '/' + xx)
end
puts "RESULT"
Dir.open(target_dir).each do |x|
  if x == '.' || x == '..' || x == '.DS_Store'
    next
  end
  puts x
end

