#!/usr/bin/env python

import os
import shutil
import sys

SUPPORTED_TYPES = [
        'py',
        'c',
]

def main():

    if len(sys.argv) < 2:
        print("USAGE: %s [file_type (c, py, etc.)]" % __file__)
        quit()

    f_type = sys.argv[1]

    if not f_type in SUPPORTED_TYPES:
        print("Type %s is not supported." % f_type)
        print("Please refer to the following types")
        for types in SUPPORTED_TYPES:
            print(types)
        quit()


    script_path = os.path.abspath(__file__)
    config_path = os.path.dirname(os.path.dirname(script_path) + '/../')

    from_path = "%s/templates/t.%s" % (config_path, f_type)
    to_path = "t.%s" % f_type
    ret = shutil.copyfile(from_path, to_path)
    print(ret)

if __name__ == '__main__':
    main()
